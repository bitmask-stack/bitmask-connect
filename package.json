{
  "name": "bitmask-connect",
  "version": "0.1.0",
  "description": "BitMask Connect SDK - A comprehensive library for interacting with the BitMask browser extension",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "author": "Jose Robles",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/diba-io/bitmask-connect"
  },
  "keywords": [
    "bitmask",
    "bitcoin",
    "rgb",
    "wallet",
    "web3",
    "dapp",
    "sdk",
    "rainbowkit"
  ],
  "dependencies": {
    "bitmask-core": "^0.7.5-beta.2"
  },
  "devDependencies": {
    "@types/node": "^20.12.12",
    "typescript": "^5.4.5",
    "eslint": "^9.2.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "prettier": "^3.2.5"
  },
  "peerDependencies": {
    "@rainbow-me/rainbowkit": "^2.0.0",
    "wagmi": "^2.0.0",
    "viem": "^2.0.0"
  },
  "peerDependenciesMeta": {
    "@rainbow-me/rainbowkit": {
      "optional": true
    },
    "wagmi": {
      "optional": true
    },
    "viem": {
      "optional": true
    }
  },
  "scripts": {
    "build": "tsc",
    "compile": "tsc",
    "prepublishOnly": "npm run build",
    "publish": "yarn compile && cd dist && npm publish && cd ..",
    "lint": "yarn prettier --check . && yarn eslint src",
    "fix": "yarn prettier --write . && yarn eslint src --fix",
    "verify": "tsc --noEmit",
    "clean": "rm -rf dist/",
    "dev": "tsc --watch"
  },
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ]
}
